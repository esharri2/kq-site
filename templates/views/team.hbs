<div class="container team">
    <h1>Cast and Crew</h1>
        <section class="team-list">
            {{#each everyone}}
            <h2>{{this.label}}</h2>
            <ul>
                {{#each this.team}}
                <li class="person">
                    <ul>
                        {{#if link}}
                        <li class="name"><a href="{{link}}">{{name}}</a></li>
                        {{else}}
                        <li class="name">{{name}}</li>
                        {{/if}}
                        {{#if role}}
                        {{/if}}
                        <li class="role">{{role}}</li>
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{/each}}
        </section>
