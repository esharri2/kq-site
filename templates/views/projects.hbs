{{>navbar }}

<div class="projects container">
    {{#each projects}}
    <div class="project">

        <h1 class="project-title">{{title}}</h1>
   
        <div class="subtitle">
            <span class="type">{{type}}</span>
            {{#if formattedDate}}
            <span class="release">{{formattedDate}}</span>
            {{/if}}
            {{#if url}}<a class="link" href={{url}}>Website</a>{{/if}}
        </div>
        {{#if image.secure_url}}
        <img src="{{image.secure_url}}" />
        {{/if}}
        {{#if description}}
        <div class="description">
            {{{description}}}
        </div>
        {{/if}}
    </div>
    {{/each}}
</div>